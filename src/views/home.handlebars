<section id="products">
    <h1>List of products:</h1>
    <div id="productsList">
        {{#each products}}
        <div class="container">
            <div class="card">
                <div class="content">
                    <h3>{{title}}</h3>
                    <div class="description">
                        <h4>{{description}}</h4>
                        <p>Code: {{code}}</p>
                        <p>Category: {{category}}</p>
                    </div>
                    <div class="price">
                        <h4>${{price}}</h4>
                    </div>
                    <div class="id">
                        <p>ID product: {{_id}}</p>
                    </div>
                    <a href="#">Buy</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</section>
<script src="/socket.io/socket.io.js"></script>