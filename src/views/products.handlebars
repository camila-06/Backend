<section id="products">
    <h1>List of products:</h1>
    <div id="productsList">
        {{#each products.docs}}
        <div class="container">
            <div class="card">
                <div class="content">
                    <h3>{{title}}</h3>
                    <div class="description">
                        <h4>{{description}}</h4>
                        <p>Code: {{code}}</p>
                        <p>Category: {{category}}</p>
                    </div>
                    <div class="price">
                        <h4>${{price}}</h4>
                    </div>
                    <div class="id">
                        <p>ID product: {{_id}}</p>
                    </div>
                    <a id="addToCart">Add to Cart</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div>
        {{#if products.hasPrevPage}}
            <a class="botons" href={{prevLink}}>Previous</a>
        {{/if}}
        {{#if products.hasNextPage}}
            <a class="botons" href={{nextLink}}>Next</a>
        {{/if}}
    </div>
</section>
<script src="/js/products.js"></script>